{
  "manifest_version": 2,
  "name": "Background Color Setter",
  "version": "1.0",
  "description": "A Chrome extension to set the background color of the current page.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ]
}